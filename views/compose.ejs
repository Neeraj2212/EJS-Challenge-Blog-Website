<%- include('partials/header') %>
<h1 style="padding: 5px 0;">Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group row">
        <label for="Title" class="col-md-2 col-form-label">First Name</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id=" Title" name="title" placeholder="Title" />
        </div>
    </div>
    <div class="form-group row">
        <label for="postContent" class="col-md-2 col-form-label">
            Post
        </label>
        <div class="col-md-10">
            <textarea name="postcontent" id="postContent" class="form-control" rows="12"></textarea>
        </div>
    </div>
    <div ><button type="submit" class="btn btn-primary offset-md-2">Publish</button></div>
</form>
